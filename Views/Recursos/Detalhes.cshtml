@model AutismoInfo.Models.RecursoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Titulo;
}

<div class="container">
    <div class="mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Voltar para Recursos
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h1 class="h3 mb-0">@Model.Titulo</h1>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <p class="lead">@Model.Descricao</p>
                <div class="d-flex align-items-center mb-3">
                    <div class="mr-3">
                        <span class="badge badge-primary">@Model.TipoArquivo</span>
                        <span class="badge badge-secondary">@Model.Tamanho</span>
                    </div>
                    <div>Publicado em: @Model.DataPublicacao</div>
                </div>
                <a href="@Model.Url" class="btn btn-success" target="_blank">
                    <i class="fas fa-download"></i> Download do material
                </a>
            </div>

            <div class="mt-4">
                <h4>Sobre este recurso</h4>
                <div class="mt-3">
                    @Html.Raw(Model.ConteudoCompleto)
                </div>
            </div>

            <div class="mt-5">
                <h4>Recursos relacionados</h4>
                <div class="row mt-3">
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Material relacionado 1</h5>
                                <p class="card-text">Descrição breve do material relacionado.</p>
                                <a href="#" class="btn btn-outline-primary btn-sm">Ver detalhes</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Material relacionado 2</h5>
                                <p class="card-text">Descrição breve do material relacionado.</p>
                                <a href="#" class="btn btn-outline-primary btn-sm">Ver detalhes</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>