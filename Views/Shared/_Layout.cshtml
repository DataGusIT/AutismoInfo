<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutismoInfo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/1hb8Wl6r4dXp8r7uO3u/O5g2v6Y8b7Ckm5C9w5" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        /* Navbar */
        .navbar {
            background-color: rgba(255, 255, 255, 0.95);
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            padding: 15px 0;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .nav-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        /* Updated Logo Styling */
        .logo {
            display: flex;
            align-items: center;
        }

        .brand-text {
            color: #6a3ea1; /* Purple color */
            font-size: 24px; /* Larger size */
            font-weight: 800; /* Thicker font */
            margin-left: 8px;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }

        .fas.fa-infinity {
            color: #6a3ea1;
            font-size: 22px;
        }

        .nav-links {
            display: flex;
            list-style: none;
            align-items: center;
            justify-content: center;
            flex-grow: 1;
        }

            .nav-links li {
                margin: 0 15px;
            }

            .nav-links a {
                text-decoration: none;
                color: #333;
                font-weight: 500;
                transition: all 0.3s;
            }

                .nav-links a:hover {
                    color: #6a3ea1;
                }

        .btn-primary {
            background-color: #6a3ea1;
            color: white;
            padding: 12px 25px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            border: 2px solid #6a3ea1;
            box-shadow: 0 4px 15px rgba(106, 62, 161, 0.2);
        }

            .btn-primary:hover {
                background-color: #55358b;
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(106, 62, 161, 0.3);
                border-color: #55358b;
            }

        .btn-outline {
            border: 2px solid #6a3ea1;
            color: #6a3ea1;
            padding: 10px 20px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-outline:hover {
                background-color: #6a3ea1;
                color: white;
            }

        .menu-toggle {
            display: none;
            font-size: 28px;
            cursor: pointer;
            color: #6a3ea1;
        }

        @@media (max-width: 768px) {
            .nav-links {
                display: none;
                flex-direction: column;
                position: absolute;
                top: 70px;
                right: 0;
                background: white;
                width: 100%;
                padding: 20px 0;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }

                .nav-links.active {
                    display: flex;
                }

                .nav-links li {
                    margin: 15px 0;
                    text-align: center;
                }

            .menu-toggle {
                display: block;
            }

            .brand-text {
                font-size: 20px; /* Slightly smaller on mobile */
            }
        }



        body {
            padding-top: 80px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="nav-content">
                <div class="logo">
                    <i class="fas fa-infinity"></i>
                    <span class="brand-text">AutismoInfo</span>
                </div>
                <ul class="nav-links">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">Sobre</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Features" asp-action="Index">Recursos</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Testimonials" asp-action="Index">Depoimentos</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="FAQ" asp-action="Index">FAQ</a></li>
                </ul>
                <div>
                    <a class="btn btn-outline" asp-area="" asp-controller="Account" asp-action="Login">Entrar</a>
                    <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Cadastro</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script>
        function toggleMenu() {
            document.querySelector('.nav-links').classList.toggle('active');
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
