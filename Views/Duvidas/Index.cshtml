@model List<AutismoInfo.Models.FAQ.CategoriaDuvidaViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Perguntas Frequentes (FAQ)";
}

<div class="container">
    <h1 class="my-4">Perguntas Frequentes sobre Autismo</h1>
    <p class="lead mb-5">
        Aqui você encontrará respostas para as dúvidas mais comuns sobre o Transtorno do Espectro Autista (TEA).
        Clique nas perguntas para expandir e ver as respostas.
    </p>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Buscar dúvidas</h5>
                    <div class="input-group">
                        <input type="text" class="form-control" id="searchFaq" placeholder="Digite sua dúvida...">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button">Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion" id="faqAccordion">
        @foreach (var categoria in Model)
        {
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">@categoria.Nome</h2>
                </div>
                <div class="card-body">
                    <div class="accordion" id="categoria@(categoria.Id)Accordion">
                        @foreach (var duvida in categoria.Duvidas)
                        {
                            <div class="card mb-2 border-0">
                                <div class="card-header bg-light" id="heading@(duvida.Id)">
                                    <h3 class="mb-0">
                                        <button class="btn btn-link btn-block text-left text-decoration-none" type="button"
                                                data-toggle="collapse" data-target="#collapse@(duvida.Id)"
                                                aria-expanded="false" aria-controls="collapse@(duvida.Id)">
                                            <i class="fas fa-chevron-down mr-2"></i>
                                            @duvida.Pergunta
                                        </button>
                                    </h3>
                                </div>

                                <div id="collapse@(duvida.Id)" class="collapse" aria-labelledby="heading@(duvida.Id)"
                                     data-parent="#categoria@(categoria.Id)Accordion">
                                    <div class="card-body">
                                        <p>@duvida.Resposta</p>
                                        @if (!string.IsNullOrEmpty(duvida.LinkArtigo))
                                        {
                                            <div class="mt-3 p-3 bg-light rounded">
                                                <h5><i class="fas fa-book-open mr-2"></i>Recomendação de leitura:</h5>
                                                <a href="@duvida.LinkArtigo" target="_blank" class="btn btn-outline-primary">
                                                    @duvida.TituloArtigo <i class="fas fa-external-link-alt ml-1"></i>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="card mt-5">
        <div class="card-header bg-info text-white">
            <h3 class="h4 mb-0">Não encontrou sua dúvida?</h3>
        </div>
        <div class="card-body">
            <p>Se você não encontrou resposta para sua dúvida, entre em contato conosco:</p>
            <a href="#" class="btn btn-info">
                <i class="fas fa-envelope mr-2"></i>Enviar Mensagem
            </a>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-link').click(function () {
                $(this).find('i').toggleClass('fa-chevron-down fa-chevron-up');

                var targetId = $(this).attr('data-target');
                var targetElement = $(targetId);

                // Toggle a visibilidade do conteúdo com id
                targetElement.toggleClass('show');
            });
        });
    </script>
}